@model EntregaSprint3.Models.Cliente

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/pais.css" />

<button class="button">
    Adicionar Cliente
</button>
<br>
<br>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeCliente" class="control-label"></label>
                <input asp-for="NomeCliente" class="form-control" />
                <span asp-validation-for="NomeCliente" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="CpfCliente" class="control-label"></label>
                <input asp-for="CpfCliente" class="form-control" />
                <span asp-validation-for="CpfCliente" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="EnderecoCliente" class="control-label"></label>
                <input asp-for="EnderecoCliente" class="form-control" />
                <span asp-validation-for="EnderecoCliente" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="NumeroCasaCliente" class="control-label"></label>
                <input asp-for="NumeroCasaCliente" class="form-control" />
                <span asp-validation-for="NumeroCasaCliente" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="BairroCliente" class="control-label"></label>
                <input asp-for="BairroCliente" class="form-control" />
                <span asp-validation-for="BairroCliente" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="CidadeId" class="control-label">Cidade</label>
                <select asp-for="CidadeId" class ="form-control" asp-items="ViewBag.CidadeId"></select>
            </div><br />
            <div class="form-group">
                <label asp-for="TelefoneCliente" class="control-label"></label>
                <input asp-for="TelefoneCliente" class="form-control" />
                <span asp-validation-for="TelefoneCliente" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Criar Cliente" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div><br />

<div>
    <button>
        <a class="adicionarp" asp-action="Index">Voltar</a>
    </button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
